@using Pasaje5.Models
@model MarcaCLS
@{
    ViewBag.Title = "Editar";
}

<h2>Editar</h2>
<div class="row">
    <div class="col-md-6">
        @using (Html.BeginForm("Editar", "Marca", FormMethod.Post, new {@id = "frm_editar" }))
        {
            <div>
                @Html.LabelFor(p => p.iidmarca)
                <br />
                @Html.TextBoxFor(p => p.iidmarca, new { @class = "from-control", @readonly = true  })
                @Html.ValidationMessage("iidamarca", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.nombre)
                <br />
                @Html.TextBoxFor(p => p.nombre, new { @class = "from-control" })
                @Html.ValidationMessage("nombre", new { @class = "text-danger" })
            </div>
            <div>
                @Html.LabelFor(p => p.descripcion)
                <br />
                @Html.TextBoxFor(p => p.descripcion, new { @class = "from-control" })
                @Html.ValidationMessage("descripcion", new { @class = "text-danger" })
            </div>
            <br />
            <div style="margin:auto">
                <input type="submit" class="btn btn-primary" value="Guardar" />
                @Html.ActionLink("Regresar","Index","Marca",null,new { @class = "btn btn-danger"});
            </div>
         }
    </div>
</div>

<script>
    var frm_editar = document.getElementById("frm_editar");
    frm_editar.onsubmit = function (e) {
        e.preventDefault();
        if (confirm("¿Deseas guardar los cambios") == 1) {
            frm_editar.submit();
        }
    }
</script>